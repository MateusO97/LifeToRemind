<!-- start home -->
<section id="home">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-2 col-md-8">
        <h1 class="wow fadeIn color-white" data-wow-offset="50" data-wow-delay="0.9s">
          <span>Life to Remind</span><span class="home-version">Demonstração</span></h1>
        <div class="element">
          <div class="sub-element">Life To Remind</div>
